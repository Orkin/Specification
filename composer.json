{
    "name": "riskio/specification",
    "description": "Implementation of the specification pattern in PHP",
    "homepage": "https://github.com/RiskioFr/Specification",
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.riskio.fr"
        }
    ],
    "require": {
        "php": ">=5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.6"
    },
    "autoload": {
        "psr-4": {
            "Riskio\\Specification\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Riskio\\SpecificationTest\\": "tests/"
        }
    }
}
